.side-bar
  .head-sec
    .head-sec__main-unit
      .head-sec__user-name
        = current_user.name
      .head-sec__icons
        = link_to new_group_path do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      .group-list__unit
        = link_to group_messages_path(group) do
          %p.group-list__heading
            = group.name
          %p.group-list__lead
            = group.show_last_message